<view class="userInfo">
  <van-cell-group >
  <van-field
    model:value="{{ problem }}"
    label="留言:"
    input-align="right"
    type="textarea"
    autosize="{{autosize}}"
    input-class="inputClass"
    placeholder="请输入问题,最少10个字"
  />
</van-cell-group>

<view class="button_">
<van-button block  disabled="{{problem.length<10}}" bind:click="problembutton" >
  立即提交
</van-button>
</view>
</view>
